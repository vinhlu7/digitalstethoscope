<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.digitalstethoscope.activities.TestCanvasActivity" >

    <TextView
        android:id="@+id/TestCanvasView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
	
	<Button
        android:id="@+id/OpenWavButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickOpenWav"
        android:text="@string/OpenWavFile"
        />

	<Button
	    android:id="@+id/TestAsyncButton"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:onClick="onClick"
	    android:text="@string/Start" />
	
</LinearLayout>
